# Enable URL rewriting
RewriteEngine On

# If the request is for the root domain (https://churnguard.site), 
# show the landing page.
RewriteRule ^$ auth/landing.php [L]

# Allow access to all other files normally (like auth/login.php, auth/signup.php, CSS, JS, etc.)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
